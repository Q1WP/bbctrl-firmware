script#dialog-template(type="text/x-template")
  .dialog-mask(v-show="show", transition="dialog")
    .dialog-wrapper(@click.stop="click_away")
      .dialog-container(@click.stop="true", :style="{width: width}")
        .dialog-header
          slot(name="header")
            h3 #[.fa(v-if="icon", class="'fa-' + icon")] {{{header}}}

        .dialog-body
          slot(name="body") {{{body}}}

        .dialog-footer
          slot(name="footer")
            bbutton(v-for="button in buttons",
              @click.stop="close(button.action)",
              :class="button.class", :title="button.title", :icon="button.icon",
              :disabled="button.disabled", :text="button.text")
