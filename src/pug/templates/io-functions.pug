script#io-functions-template(type="text/x-template")
  table.functions
    tr: th.header(colspan=100) I/O Functions

    tr
      th(v-for="name in columns", track-by="$index",
        :class="name || 'separator'") {{name}}

    tr(v-for="i in rows")
      td(is="io-functions-row", :func="functions[i * 2 + 0]")
      th.separator
      td(is="io-functions-row", :func="functions[i * 2 + 1]",
        v-if="functions[i * 2 + 1]")


script#io-functions-row-template(type="text/x-template")
  td.function(:class="func.type", :title="func.title") {{func.name}}
  td.state: io-indicator(:state="func.state", :type="func.type",
    :func="func.name")
  td.pins {{func.pins.join(' ')}}
