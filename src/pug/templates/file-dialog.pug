script#file-dialog-template(type="text/x-template")
  .file-dialog
    dialog(v-ref:dialog, :click-away="false", :buttons="buttons",
      :header="(config.save ? 'Save' : 'Open') + ' file'", width="")

      div(slot="body")
        files(v-ref:files, :mode="config.save ? 'save' : 'open'",
          :locations="locations", @selected="set_selected",
          @activate="activate")
